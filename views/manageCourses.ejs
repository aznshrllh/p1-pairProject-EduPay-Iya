<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Courses</title>
  </head>
  <body>
    <h1>Manage Courses</h1>

    <!-- Tampilkan daftar course -->
    <table border="1">
      <thead>
        <tr>
          <th>Course Name</th>
          <th>Description</th>
          <th>Duration (hours)</th>
          <th>Video URL</th>
          <th>Author</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (courses.length > 0) { %> <% courses.forEach(course => { %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.duration %></td>
          <td><%= course.videoUrl %></td>
          <td><%= course.author %></td>
          <td>
            <a href="/dashBoard/<%= userId %>/course/<%= course.id %>/edit"
              >Edit</a
            >
            <a
              href="/dashBoard/<%= userId %>/course/<%= course.id %>/delete"
              onclick="return confirm('Are you sure you want to delete this course?')"
              >Delete</a
            >
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="6">You have no courses yet.</td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <br />
    <a href="/dashBoard/<%= userId %>">Back to Dashboard</a>
  </body>
</html>
